{
  "id": "research-synthesis",
  "name": "Research Synthesis Engine",
  "description": "Multi-stage research pipeline that searches the web, scrapes content with Firecrawl, generates embeddings with Hugging Face, stores in a knowledge base, and synthesizes findings with citations using an AI agent.",
  "nodes": [
    {
      "id": "node-1",
      "type": "input",
      "position": {
        "x": 100,
        "y": 250
      },
      "config": {
        "input_output": {
          "label": "Research Question",
          "data_type": "text"
        }
      },
      "label": "Research Question"
    },
    {
      "id": "node-2",
      "type": "tool",
      "position": {
        "x": 250,
        "y": 250
      },
      "config": {
        "tool": {
          "tool_type": "duckduckgo_search",
          "parameters": {
            "query": "{{upstream}}",
            "max_results": 10
          }
        }
      },
      "label": "Web Search"
    },
    {
      "id": "node-3",
      "type": "firecrawl_scrape",
      "position": {
        "x": 400,
        "y": 250
      },
      "config": {
        "firecrawl_scrape": {
          "url": "{{upstream}}",
          "formats": ["markdown"],
          "include_metadata": true,
          "credential_id": null
        }
      },
      "label": "Firecrawl Scrape"
    },
    {
      "id": "node-4",
      "type": "huggingface_inference",
      "position": {
        "x": 550,
        "y": 250
      },
      "config": {
        "huggingface_inference": {
          "model_id": "sentence-transformers/all-MiniLM-L6-v2",
          "task": "feature-extraction",
          "parameters": {},
          "input_key": "{{upstream}}",
          "credential_id": null
        }
      },
      "label": "Generate Embeddings"
    },
    {
      "id": "node-5",
      "type": "knowledge_base",
      "position": {
        "x": 700,
        "y": 250
      },
      "config": {
        "knowledge_base": {
          "kb_type": "url",
          "vector_db": "pgvector",
          "sources": ["{{upstream}}"],
          "chunk_size": 1000,
          "chunk_overlap": 200
        }
      },
      "label": "Knowledge Base"
    },
    {
      "id": "node-6",
      "type": "agent",
      "position": {
        "x": 850,
        "y": 250
      },
      "config": {
        "agent": {
          "name": "Research Synthesizer",
          "provider": "openai",
          "model": "gpt-4o",
          "system_prompt": "You are a research synthesis expert. Analyze research findings and generate comprehensive reports with citations.",
          "temperature": 0.7,
          "max_tokens": null,
          "tools": [],
          "knowledge_bases": ["node-5"],
          "instructions": [
            "Synthesize research findings with citations",
            "Format output as: ## Summary [synthesis] ## Key Findings [bullet points] ## Sources [1] [2] [3]",
            "Include evidence-based insights and cross-reference sources",
            "Maintain academic rigor and cite all claims"
          ],
          "show_tool_calls": true,
          "markdown": true
        }
      },
      "label": "Research Synthesizer"
    },
    {
      "id": "node-7",
      "type": "output",
      "position": {
        "x": 1000,
        "y": 250
      },
